mixin sermon-filter(data, filter)
	if data.speakers
		h5.text-muted Filter by Speaker
		ul.list-unstyled.tags-list
			each speaker in data.speakers
				li: a(href='/speakers/' + speaker.key, class=filter.active && filter.active.slug == speaker.slug ? 'active' : false).list-group-item= speaker.name.full + ' (' +speaker.sermonCount + ')'
